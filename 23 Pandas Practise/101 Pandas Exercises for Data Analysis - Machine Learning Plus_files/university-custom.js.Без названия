jQuery(document).ready(function($){$('.single-post-features-wrapper ul li:first-child').toggleClass('plus minus');$('.single-post-features-wrapper ul li:first-child .inner').addClass('show');$('.single-post-features-wrapper ul li:first-child .inner').css("display","block");$('.toggle').click(function(e){e.preventDefault();var $this=$(this);if($this.next().hasClass('show')){$this.next().removeClass('show');$this.next().slideUp(350);}else{$this.next().toggleClass('show');$this.next().slideToggle(350);}
if($this.parent().hasClass('plus')){$this.parent().toggleClass('plus minus');}else{$this.parent().toggleClass('minus plus');}});$("body").on("click",".bottom-to-top-arrow",function(){event.preventDefault();$('html, body').animate({scrollTop:0},duration);return false;});var offset=800;var duration=500;$(window).scroll(function(){if($(this).scrollTop()>offset){$('.bottom-to-top-arrow').fadeIn(duration);}else{$('.bottom-to-top-arrow').fadeOut(duration);}});$(".courseplan input[name='plan_pricing']:first").prop("checked",true);var courseplan=$(".courseplan input[name='plan_pricing']:checked").data('url');$("#startcourse").attr('href',courseplan);$("body").on("change",".plan",function(){var courseplan=$(".courseplan input[name='plan_pricing']:checked").data('url');$("#startcourse").attr('href',courseplan);});});